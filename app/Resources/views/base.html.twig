<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="{{ asset('tournament.css') }}" rel="stylesheet">
    {% block stylesheets %}

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body style="background-color: lightblue">
<img src="http://placehold.it/1500x100" width="100%"/>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <ul class="nav navbar-nav">
            {% for menu in getMenu() %}
                {% if menu.children is defined %}
                    <li class="dropdown {% if app.request.attributes.get('_route') in menu.routes %}active{% endif %}">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">{{ menu.label }}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for childrenMenu in menu.children %}
                                <li class="{% if path(app.request.attributes.get('_route')) == path(childrenMenu.route) %}active{% endif %}">
                                    <a href="{{ path(childrenMenu.route) }}">
                                        {{ childrenMenu.label }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li class="{% if path(app.request.attributes.get('_route')) == path(menu.route) %}active{% endif %}">
                        <a href="{{ path(menu.route) }}">{{ menu.label }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</nav>

<div class="container">
    <div class="main-content">
        {% block body %}

        {% endblock %}
    </div>
</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"
            integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
