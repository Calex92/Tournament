{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6 text-center margin-top-20 padding-top-20">
    <a href="{{ path("fos_user_registration_register") }}" class="btn btn-success">Pas encore inscrit?</a>
</div>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="col-sm-6 text-center">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <div class="form-group flex">
            <label for="username" class="col-sm-4 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-sm-8">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
            </div>
        </div>

        <div class="form-group margin-top-10 flex">
            <label for="password" class="col-sm-4 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-sm-8">
                <input type="password" id="password" name="_password" required="required" class="form-control"/>
            </div>
        </div>

        <div class="col-md-12 margin-top-10 flex">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" style="width: 100%"/>
        </div>
        <div class="col-md-6 margin-top-10 flex">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="col-md-6 margin-top-10 flex">
            <a href="{{ path("fos_user_resetting_request") }}" class="pull-right">Mot de passe oubli√©</a>
        </div>
    </form>

</div>

<div class="clearfix"></div>
