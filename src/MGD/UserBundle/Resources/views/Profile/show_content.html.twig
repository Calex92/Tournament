{% trans_default_domain 'FOSUserBundle' %}

{# @var user \MGD\UserBundle\Entity\User#}
<div>
    <h2>Mes informations générales</h2>

    <div class="col-md-6">
        <div class="fos_user_user_show">
            <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        </div>
    </div>

    <div class="col-md-6">
        <p>Nom: {{ user.lastname }}</p>
        <p>Prénom: {{ user.firstname }}</p>
    </div>
</div>
{% if user.gamingProfiles|length > 0 %}
<div>
    <h2>Mes noms d'utilisateur</h2>
    <div>
        {% for gamingProfile in user.gamingProfiles %}
            {# @var gamingProfile \MGD\EventBundle\Entity\GamingProfile #}
            <div class="col-md-6 margin-bottom-15">
                <div>Jeu : {{ gamingProfile.game.name }}</div>
                <div>Username : {{ gamingProfile.username }}</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}
<a href="{{ path("fos_user_profile_edit", { "id" : user.id } ) }}" class="btn btn-primary pull-right col-md-2">Editer
    mon profil</a>
<div class="clearfix"></div>
