{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
{{ form_errors(form) }}
<div class="well well-block-info">
    Pour toute modification, veuillez compl√©ter votre mot de passe:
    <div class="form-group margin-top-20">
        {{ form_label(form.current_password, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
        <div class="col-sm-8">
            {{ form_widget(form.current_password, {"attr": {'class' : "form-control"}}) }}
        </div>
        {{ form_errors(form.current_password) }}
    </div>
    <div class="clearfix"></div>
</div>
<div class="well well-block-info">
    <div class="form-group">
        {{ form_label(form.firstname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
        <div class="col-sm-8">
            {{ form_widget(form.firstname, {"attr": {'class' : "form-control"}}) }}
        </div>
        {{ form_errors(form.firstname) }}
    </div>

    <div class="form-group margin-top-20">
        {{ form_label(form.lastname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
        <div class="col-sm-8">
            {{ form_widget(form.lastname, {"attr": {'class' : "form-control"}}) }}
        </div>
        {{ form_errors(form.lastname) }}
    </div>

    <div class="clearfix"></div>
</div>
{{ form_errors(form) }}
<div class="well well-block-info">
    <h4 class="col-md-10">Mes profils d'utilisateur</h4>
    <button type="button" id="add-profile" class="btn btn-success col-md-2"><i class="glyphicon glyphicon-plus"></i> Ajouter un profil</button>
    <div id="profile-fields-list" class="col-md-12 padding-top-20">
        {{ form_widget(form.gamingProfiles) }}
    </div>
    <div class="clearfix"></div>
</div>
<div>
    <input class="btn btn-primary pull-right col-md-2" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
</div>
<div class="clearfix"></div>
{{ form_end(form) }}
