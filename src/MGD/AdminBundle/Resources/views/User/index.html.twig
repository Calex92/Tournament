{% extends "base.html.twig" %}

{% block body %}
    <h1>Voici la liste des utilisateurs inscrits à l'application</h1>
    <table class="table table-striped table-bordered table-hover dataTable">
        <thead>
        <tr>
            <th data-priority="2">Login</th>
            <th data-priority="5">Prénom</th>
            <th data-priority="4">Nom de famille</th>
            <th data-priority="3">Adresse mail</th>
            <th data-priority="1">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td class="text-center">
                    <a href="{{ path("fos_user_profile_show") }}" title="Consulter">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}