{% extends "base.html.twig" %}

{% block body %}
    <div class="main-content">
        {% for event in events %}
        <div class="col-md-6 margin-top-15 margin-bottom-15 thumbnail-event">
            <a href="{{ path(event.route) }}" class="col-md-10 col-md-offset-1 no-padding">
                <img src="{{ event.image }}">
                <label>{{ event.title }}</label>
            </a>
        </div>
        {% endfor %}
        <div class="clearfix"></div>
    </div>
{% endblock %}
