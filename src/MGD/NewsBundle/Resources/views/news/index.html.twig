{% extends "base.html.twig" %}

{% block body %}
    {% for news in listNews %}
        <div class="row">
            {% if news.cover %}<img src="{{ news.cover }}" class="col-md-3" style="height: 180px;">{% endif %}
            <div class="{% if news.cover %}col-md-9{% else %}col-md-12{% endif %}">
                <h1>{{ news.title }}</h1>
                <p>
                    {{ news.body|striptags |length > 300 ? news.body|striptags |slice(0, 300) ~ '...' : news.body|striptags }}
                </p>
                <span>Créé le {{ news.creationDate|date("d/m/Y") }}
                    par {{ news.author.firstname }} {{ news.author.lastname }}</span>
                <a href="{{ path("mgd_news_show", {'id' : news.id } ) }}" class="pull-right btn btn-default">Lire la suite</a>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}
