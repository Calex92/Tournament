{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        {% if news.cover %}
        <div class="pull-right col-md-5">
            <img src="{{ vich_uploader_asset(news, 'coverFile') }}"
                 class="img-responsive center-block" width="100%">
        </div>
        {% endif %}

        <h1 class="text-center">{{ news.title }}</h1>
        {{ news.body|raw }}
    </div>

    <div class="clearfix"></div>
{% endblock %}
